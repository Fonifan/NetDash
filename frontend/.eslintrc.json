{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"airbnb"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"semi": [
			"error",
			"always"
		],
		"quotes": [
			2,
			"single",
			{
				"avoidEscape": true
			}
		],
		"jsx-quotes": [
			2,
			"prefer-single"
		],
		"react/jsx-indent-props": [
			"error"
		],
		"react/prop-types": [
			"warn"
		]
	}
}
